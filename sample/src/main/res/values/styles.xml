<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextAppearance.AppCompat.Headline.Tooltip">
        <item name="android:textColor">#E91E63</item>
    </style>

    <style name="TextAppearance.AppCompat.Body1.Tooltip">
        <item name="android:textColor">#00BCD4</item>
    </style>

    <style name="TextAppearance.AppCompat.Display1.Tooltip">
        <item name="android:textColor">#FF9800</item>
    </style>

    <!--  Override the dialog's theme for custom styling  -->
    <style name="TooltipDialogTheme.Colorful" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="toolTipDialog.titleTextStyle">@style/TextAppearance.AppCompat.Headline.Tooltip</item>
        <item name="toolTipDialog.subtitleTextStyle">@style/TextAppearance.AppCompat.Display1.Tooltip</item>
        <item name="toolTipDialog.bodyTextStyle">@style/TextAppearance.AppCompat.Body1.Tooltip</item>
        <item name="toolTipDialog.backgroundColor">#091E95</item>
    </style>

</resources>
